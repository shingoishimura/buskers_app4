
<%= form_with model: spot, local: true do |f| %>
  <div class="field">
    <%= f.label :name, "スポットの名称" %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :add, "住所" %><br />
    <%= f.text_area :add, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :note, "詳細・注意事項" %><br />
    <%= f.text_area :note, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :image, "バスキングポイントの写真" %><br />
    <%= f.file_field :image %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>